<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LevelSelcetionActivity"
    android:background="#377e7f"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_close"
            android:layout_marginLeft="17dp"
            android:id="@+id/level_select_close_btn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Japanese"
            android:id="@+id/language"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose your level"
                android:textColor="#ffffff"
                android:textSize="20dp"/>
            <LinearLayout
                android:id="@+id/beginner_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_corner_dark_cyan"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="10dp"
                    android:textColor="#b8834f"
                    android:paddingTop="10dp"
                    android:text="1"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:background="@drawable/medal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beginner"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white_in_green"
                    android:textSize="22dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_done_white"
                        android:id="@+id/beginner_done"
                        android:visibility="gone"
                        android:layout_marginRight="15dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/intermediate_layout"
                android:layout_height="70dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_corner_dark_cyan"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="10dp"
                    android:textColor="#b8834f"
                    android:paddingTop="10dp"
                    android:text="2"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:background="@drawable/medal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intermediate"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white_in_green"
                    android:textSize="22dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_done_white"
                        android:id="@+id/intermediate_done"
                        android:visibility="gone"
                        android:layout_marginRight="15dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="15dp"
                android:id="@+id/advanced_layout"
                android:background="@drawable/round_corner_dark_cyan"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="10dp"
                    android:textColor="#b8834f"
                    android:paddingTop="10dp"
                    android:text="3"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:background="@drawable/medal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advanced"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white_in_green"
                    android:textSize="22dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_done_white"
                        android:id="@+id/advanced_done"
                        android:visibility="gone"
                        android:layout_marginRight="15dp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Why are you learning this language?"
                android:textColor="#ffffff"
                android:textSize="20dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/purpose_brain_training"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:background="@drawable/round_corner_dark_cyan"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/purpose_travel">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Barin Training"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/purpose_travel"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:background="@drawable/round_corner_dark_cyan"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/purpose_brain_training"
                    app:layout_constraintLeft_toLeftOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Travel"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:id="@+id/purpose_school"
                    android:background="@drawable/round_corner_dark_cyan"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/purpose_family_friends">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="School"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/purpose_family_friends"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:background="@drawable/round_corner_dark_cyan"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/purpose_school">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="Family &amp; Friends"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/purpose_job_required"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:background="@drawable/round_corner_dark_cyan"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/purpose_other">

                    <TextView
                        android:layout_width="132dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Job Required"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:id="@+id/purpose_other"
                    android:background="@drawable/round_corner_dark_cyan"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/purpose_job_required"
                    app:layout_constraintRight_toRightOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Other"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Select the day(s) you prefer to study"
                android:textColor="#ffffff"
                android:textSize="20dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp">

                <Button
                    android:id="@+id/select_sun"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/round_corner_dark_cyan"
                    android:text="Sun"
                    android:textColor="#ffffff"
                    android:textAllCaps="false"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/select_mon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textColor="#ffffff"
                    android:id="@+id/select_mon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/select_sun"
                    app:layout_constraintRight_toLeftOf="@+id/select_tue"
                    android:background="@drawable/round_corner_dark_cyan"
                    android:text="Mon"
                    android:textAllCaps="false"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/select_tue"
                    android:textColor="#ffffff"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/select_mon"
                    app:layout_constraintRight_toLeftOf="@+id/select_wed"
                    android:background="@drawable/round_corner_dark_cyan"
                    android:text="Tue"
                    android:textAllCaps="false"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/select_wed"
                    android:textColor="#ffffff"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/select_tue"
                    app:layout_constraintRight_toLeftOf="@+id/select_thu"
                    android:background="@drawable/round_corner_dark_cyan"
                    android:text="Wed"
                    android:textAllCaps="false"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textColor="#ffffff"
                    android:id="@+id/select_thu"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/select_wed"
                    app:layout_constraintRight_toLeftOf="@+id/select_fri"
                    android:background="@drawable/round_corner_dark_cyan"
                    android:text="Thu"
                    android:textAllCaps="false"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/select_fri"
                    android:textColor="#ffffff"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/select_thu"
                    app:layout_constraintRight_toLeftOf="@+id/select_sat"
                    android:background="@drawable/round_corner_dark_cyan"
                    android:text="Fri"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/select_sat"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/round_corner_dark_cyan"
                    android:text="Sat"
                    android:textAllCaps="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/select_fri"
                    app:layout_constraintRight_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:layout_width="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="50dp"
                android:text="Submit"
                android:textStyle="bold"
                android:id="@+id/enroll_btn"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:textColor="@color/dark_green"
                android:background="@drawable/round_corner_button_yellow"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="30dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>