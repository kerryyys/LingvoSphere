<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:padding="15dp"
    android:background="@drawable/round_corner_dark_cyan"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/inprogress_course_flag"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/flag_korea"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inprogress_course_name"
            android:text="Korea - Beginner"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inprogress_course_progress_text"
            android:text="50%"
            android:textSize="15dp"
            android:textColor="@color/white" />
        <ProgressBar
            android:id="@+id/inprogress_course_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_progress_white"
            android:progressDrawable="@drawable/round_corner_yellow"
            android:max="100"
            android:progress="50"/>
    </LinearLayout>
</LinearLayout>